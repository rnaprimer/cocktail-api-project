<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Random Cocktail Generator</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Random Cocktail Generator</h1>
    <form action="/" method="GET">
      <button type="submit">Get a New Cocktail</button>
    </form>

    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } else if (cocktail) { %>
      <div class="cocktail">
        <h2><%= cocktail.name %></h2>
        <img src="<%= cocktail.image %>" alt="<%= cocktail.name %>">
        <h3>Ingredients</h3>
        <ul>
          <% cocktail.ingredients.forEach(item => { %>
            <li><%= item.measure %> <%= item.ingredient %></li>
          <% }) %>
        </ul>
        <h3>Instructions</h3>
        <p><%= cocktail.instructions %></p>
      </div>
    <% } %>
  </div>
</body>
</html>